<div id='join_tutor' data-role='page' data-title="join_tutor" ng-controller="join_tutorCtrl">

    <div data-role="popup" id="subject_list" data-theme="none">
        <div data-role="collapsibleset" data-theme="b" data-content-theme="a" data-collapsed-icon="arrow-r" data-expanded-icon="arrow-d" style="margin:0; width:250px;">
            <div data-role="collapsible" data-inset="false" ng-repeat="class in classes">
                <h2>{{class.cate}}</h2>
                <ul ng-repeat="sub in class.subject" data-role="listview">
                    <li><a ng-click="set_sub(sub)" data-rel="dialog">{{sub}}</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div data-role="popup" id="address_si_list" data-theme="b">
        <ul data-role="listview" data-inset="true" style="min-width:210px;" ng-repeat="address in address_si">
            <li><a ng-click="setAddress_si(address)">{{address}}</a></li>
        </ul>
    </div>

    <div data-role="popup" id="address_gu_list" data-theme="none">
        <div data-role="collapsibleset" data-theme="b" data-content-theme="a" data-collapsed-icon="arrow-r" data-expanded-icon="arrow-d" style="margin:0; width:250px;">
            <div data-role="collapsible" data-inset="false" ng-repeat="address in address_gu">
                <h2>{{address.cate}}</h2>
                <ul ng-repeat="gu in address.gu" data-role="listview">
                    <li><a ng-click="setAddress_gu(gu)" data-rel="dialog">{{gu}}</a></li>
                </ul>
            </div>
        </div>
