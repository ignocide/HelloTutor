<div id="main" data-role="page" data-title='main' ng-controller="mainCtrl">

    <div data-role="popup" id="choose_write" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
        <div data-role="header" data-theme="a">
            <h1>choose What</h1>
        </div>
        <div role="main" class="ui-content">
            <!--<h3 class="ui-title">Are you sure you want to delete this page?</h3>-->
            <p>무엇을 작성하실껀가요?</p>
            <a href="#board_write" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b">게시물</a>
            <a href="#course_write" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b">수업</a>
        </div>
    </div>

    <sidebar></sidebar>

    <header data-role='header' data-theme='c'>
        <a href='#sidebar' data-icon='bullets' data-iconpos='notext'></a>
        <h1><img src="/images/hellotutor2.png" class="logo_header" alt='logo'/></h1>
        <a href='#choose_write' data-rel="popup" data-icon='edit' data-iconpos='notext'></a>
        <!--<a href='#write' data-icon='edit' data-iconpos='notext' ng-if='profile.isTutor == 0'></a>-->
    </header>
    <section data-role="content">
        <div class="recommends_list" ng-if="recommends.length>0">
            <div class="ui-grid-b" id="recommend" ng-repeat="recommend in recommends">
                <div class="ui-block-a" style="width:30%;" ng-click="toProfile(recommend.email,recommend.isTutor)">
                    <img src="/images/mini_normal.jpg" id = "recommend_thumbnail" alt='icon' ng-if="recommend.thumbnail == undefined"/>
                    <img ng-src="{{recommend.thumbnail}}" id = "recommend_thumbnail" alt='icon' ng-if="recommend.thumbnail != undefined"/>
                </div>
                <div class="ui-block-b" style="width:45%;" ng-click="toProfile(recommend.email,recommend.isTutor)">
                    <div id="recommend_inner">
                        <a class="recommend_name">{{recommend.name}}</a>
                        <a class="recommend_together" ng-if="recommend.together != 0">함께 아는 친구 {{recommend.together}}명</a><br/>
                        <div id="subjects" ng-repeat="subject in recommend.subjects">
                            <br ng-if="recommend.subjects.indexOf(subject)==2"/>
                            <a class="subjects">{{subject}}</a>
                        </div>
                    </div>
                </div>
                <div class="ui-block-c" style="width:25%;"  ng-init="recommend.isFriend=0">
                    <div id="recommend_inner" style="text-align: center"><!--<img src="/images/mini_friend_gray2.png" id = "isFriend_icon" alt='logo' style="height: 60px; "/>-->
                        <button class="reqFriendBtn" ng-click="reqFriend(recommends.indexOf(recommend))" ng-if="!recommend.isFriend">친구 추가</button>
                        <button class="delFriendBtn" ng-click="delFriend(recommends.indexOf(recommend))" ng-if="recommend.isFriend">친구 요청중</button>
                    </div>
                </div>
            </div>
            <div id="recommend_footer">
                <a ng-href="#rcm_tutor">추천 더 보기</a>
            </div>
        </div>


        <div id="state_list" ng-repeat="st in state">
            <div class="ui-grid-a state_item" id="state_{{state.indexOf(st)}}" del-drag="delState(state.indexOf(st))">
                <div class="ui-block-a" style="width:40%;" >
                    <img src="/images/mini_normal.jpg" id = "friend_from_thumbnail" alt='icon' ng-if="st.friend_from_thumbnail == null"/>
                    <img ng-src="{{st.friend_from_thumbnail}}" id = "friend_from_thumbnail" alt='icon' ng-if="st.friend_from_thumbnail != null"/>
                    <img src="/images/mini_normal.jpg" id = "friend_to_thumbnail"  alt='icon' ng-if="st.friend_to_thumbnail == undefined"/>
                    <img ng-src="{{st.friend_to_thumbnail}}" id = "friend_to_thumbnail" alt='icon' ng-if="st.friend_to_thumbnail != undefined"/>
                </div>
                <div class="ui-block-b" style="width:60%;">
                    <div id="state_notice">
                        <a id="state_name">{{st.friend_from_name}}</a>님과
                        <a id="state_name">{{st.friend_to_name}}</a>님이  <br/>
                        친구가 되었습니다.
                    </div>
                </div>
                <!--<div class="ui-block-c" style="width:10%;">-->
                <!--<img src="/images/post_x.png" style="max-height: 35px; max-width: 100%">-->
                <!--</div>-->
            </div>
        </div>


        <div class="board_list">
            <div ng-repeat="item in boards" ng-if="boards.length>0">
                <div class ="board" ng-if="item.isBoard">
                    <div class="ui-grid-b" id = "board_header" ng-click="toProfile(item.actor,item.isTutor)">
                        <div class="ui-block-a board_actor" style="width:15%;">
                            <img src="/images/mini_normal.jpg" id = "to_profile" alt='to_profile' style="height: 30px;" ng-if="item.actor_thumbnail == null"/>
                            <img ng-src="{{item.actor_thumbnail}}" id = "to_profile" alt='to_profile' style="height: 30px;" ng-if="item.actor_thumbnail != null"/>
                        </div>
                        <div class="ui-block-b" style="width:85%;" ng-if="item.cate == 3">
                            <a class="board_name">{{item.actor_name}}</a>
                            <a style="float: right">{{item.regdate}}</a>
                        </div>
                        <div class="ui-block-b" style="width:85%;" ng-if="item.cate == 4">
                            <a id="board_name">{{item.actor_name}}</a> 님이 댓글을 달았습니다.
                            <a style="float: right">{{item.regdate}}</a>
                        </div>
                        <div class="ui-block-b" style="width:85%;" ng-if="item.cate == 5">
                            <a id="board_name">{{item.actor_name}}</a> 님이 좋아합니다.
                            <a style="float: right">{{item.regdate}}</a>
                        </div>
                    </div>
                    <div id="board_title" ng-click="toBoard(item.num)">
                        <p>{{item.title}}</p>
                    </div>
                    <div id="board_content" ng-click="toBoard(item.num)">
                        <a>{{item.content}}</a>
                    </div>
                    <div id="board_picture" ng-if="item.thumbnail" ng-click="toBoard(item.num)">
                        <img ng-src="{{item.thumbnail}}" id = "board_thumbnail" alt='board_thumbnail'/>
                    </div>
                    <div class="board_footer_1">
                        <div class="ui-grid-a" id="recommend_profile">
                            <div class="ui-block-a" style="width:50%; border-right: 1px solid #CCCCCC">
                                <a>좋아요 {{item.good}}개</a>
                            </div>
                            <div class="ui-block-b" style="width:50%;">
                                <a>댓글 {{item.cmt}}개</a>
                            </div>
                        </div>
                    </div>
