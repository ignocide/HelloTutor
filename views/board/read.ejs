<!DOCTYPE HTML>
<html>
<head>
    <title>index</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/mystyle.css">
    <script src="/javascripts/jquery.tmpl.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script src="/javascripts/myscript.js"></script>
    <script src="/javascripts/jquery.slides.min.js"></script>
    <script type="text/javascript" language="javascript">
        $(function(){
            $("#slides").slidesjs({
                width: 500,
                height: 500
            });
        });
    </script>
</head>
<body>

<div id="board_read" data-role="page" data-title='board_read'>

    <div data-role="panel" id="sidebar" data-display="overlay">
        <div id = "to_home_outer">
            <div class="ui-grid-a" onclick="location.href='/board/main/1'">
                <div class="ui-block-a" style="width:20%; float:left;">
                    <a><img src="/images/menu_home.png" id = "to_home_icon" alt='icon'/></a>
                </div>
                <div id="to_home" class="ui-block-b" style="width:80%; float:left;"><p>홈으로 이동</p></div>
            </div>
        </div>
        <div id="my_profile" onclick="profile('<%=profile.email%>',<%=profile.isTutor%>)">
            <div class="ui-grid-a">
                <div class="ui-block-a" style="width:40%; vertical-align: middle">
                    <%if(profile.thumbnail == null){%><img src="/images/mini_normal.jpg" id = "profile_thumbnail" style="height: 100px;" alt='icon'/><%}%>
                    <%if(profile.thumbnail != null){%><img src="<%=profile.thumbnail%>" id = "profile_thumbnail" style="height: 100px;" alt='icon'/><%}%>
                </div>
                <div class="ui-block-b" style="width:60%; vertical-align: middle">
                    <p><a id="name"><%= profile.name %></a><a id="address"><%= profile.address_gu %></a><br/>
                        <% if(profile.isTutor == 1){
                                (profile.subjects).forEach(function(subject){%>
                        <a class="subjects"><%= subject %></a>
                        <%if((profile.subjects).indexOf(subject) == 1){%><br/><%}%>
                        <%})} else { if(profile.school_name != undefined){%><a id="school"><%= profile.school_name %></a>&nbsp<a id="grade"><%= profile.grade %></a> <%}}%>
                    </p>
                </div>
            </div>
        </div>
        <div id="menu_list">
            <ul data-role="listview">
                <li><a onclick="location.href='/member/recommend_tutor/1'"><img src="/images/menu_a.png">지인을 찾아보세요</a></li>
                <li><a onclick="location.href='/community/friend_list'"><img src="/images/menu_b.png">내 인맥</a></li>
                <li><a onclick="location.href='/message/alarm'"><img src="/images/menu_c.png">알림</a></li>
                <li><a onclick="location.href='/message/list'"><img src="/images/menu_c.png">메세지</a></li>
                <li><a onclick="location.href='/search'"><img src="/images/menu_c.png">검색</a></li>
                <li><a onclick="location.href='/message/notice'"><img src="/images/menu_d.png">공지사항</a></li>
                <!--<li><a href="bmw.html"><img src="/images/menu_e.png">설정</a></li>-->
            </ul>
        </div>
    </div>

    <header data-role='header' data-theme='c'>
        <a href='#sidebar' data-icon='bullets' data-iconpos='notext'></a>
        <h1><img src="/images/hellotutor2.png" id = "logo_header" alt='logo'/></h1>
    </header>
    <section data-role="content">
        <div class="board_outer">
            <div id="read_header">
                <div class="ui-grid-a">
                    <div class="ui-block-a" style="width:50%;">
                        <a id="writer" style="float:left;"><%=board.name%></a>
                    </div>
                    <div class="ui-block-b" style="width:50%;">
                        <a id="regdate" style="float:right"><%=board.regdate%></a>
                    </div>
                </div>
            </div>
            <div id="board_content">
                <div id="board_imgs" style="text-align: center">
                    <%if(board.photo.length >1){%>
                    <div id="slides">
                        <%(board.photo).forEach(function(img){%>
                        <img src="<%=img%>" style="max-height: 300px; max-width: 100%;">
                        <%})%>
                    </div>
                    <%}%>
                    <%if(board.photo.length == 1){%><img src="<%=board.photo[0]%>" style="max-height: 300px; max-width: 100%; margin: 0px auto;"><%}%>
                </div>
                <div id="title">
                    <a><%=board.title%></a>
                </div>
                <div id="content">
                    <p><%=board.content%></p>
                </div>
                <%if(board.url1 != null){%>
                link1 : <%=board.url1%>
                <%} if (board.url2 != null){%>
                link2 : <%=board.url1%>
                <%}%>
            </div>
            <div class="board_footer_1">
                <div class="ui-grid-b" id="recommend_profile">
                    <div class="ui-block-a" style="width:33%; border-right: 1px solid #eeeeee;">
                        <% if(board.isGood == 0){%><a id="good" onclick="board_good_req(<%=board.num%>,<%=board.good-board.isGood%>)">좋아요 <%=board.good-board.isGood%>개</a><%}%>
                        <% if(board.isGood == 1){%><a id="good" onclick="board_good_del(<%=board.num%>,<%=board.good-board.isGood%>)">좋아요 취소 <%=board.good-board.isGood+1%>개</a><%}%>
                    </div>
                    <div class="ui-block-b" style="width:33%; border-right: 1px solid #eeeeee;">
                        <a>댓글 <%=board.cmt%>개</a>
                    </div>
                    <div class="ui-block-c" style="width:33%;" onclick="show_cmt_form()">
                        <a>댓글 쓰기</a>
                    </div>
                </div>
            </div>
            <form action="/board/write_comment" method="post" data-ajax="false">
                <input type="hidden" name ="grp" value="<%=board.num%>">
                <div id="cmt_form" style="display: none;" >
                    <div class="ui-grid-a">
                        <div class="ui-block-a" style="width:70%;">
                            <textarea name = "content" id="content"></textarea>
                        </div>
                        <div class="ui-block-b" style="width:30%; padding :10px">
                            <!--<img src='/images/comment.png' style="max-width: 100%;">-->
                            <input type="submit" value="쓰기">
                        </div>
                    </div>
                </div>
            </form>
            <div class="board_commends">
                <h4>Comments</h4>
                <%(board_comments).forEach(function(item){%>
                <div id = "comment">
                    <div class="ui-grid-a">
                        <div class="ui-block-a" style="width:20%; border-right: 1px solid #eeeeee;">
                            <%if(item.actor_thumbnail == null){%><img src="/images/normal.png" style="width:100%;height: 100%;"><%}%>
                            <%if(item.actor_thumbnail != null){%><img src="<%=item.actor_thumbnail%>" style="width:100%;height: 100%;"><%}%>
                        </div>
                        <div class="ui-block-b" style="width:80%;">
                            <div id="comment_header">
                                <a id="writer" style="float:left;"><%=item.name%></a> <a id="regdate" style="float:right"><%=item.regdate%></a>
                            </div>
                            <div id="comment_content">
                                <p><%=item.content%></p>
                            </div>
                        </div>
                    </div>
                </div>
                <%})%>
            </div>
        </div>
    </section>
</div>
</body>
</html>
