<!DOCTYPE HTML>
<html>
<head>
    <title>index</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/mystyle.css">
    <script src="/javascripts/jquery.tmpl.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script src="/javascripts/myscript.js"></script>
    <script type="text/javascript" language="javascript">
    </script>
</head>
<body>

<div id="message_list" data-role="page" data-title='message_list'>
    <div data-role="panel" id="sidebar" data-display="overlay">
        <div id = "to_home_outer">
            <div class="ui-grid-a" onclick="location.href='/board/main/1'">
                <div class="ui-block-a" style="width:20%; float:left;">
                    <a><img src="/images/menu_home.png" id = "to_home_icon" alt='icon'/></a>
                </div>
                <div id="to_home" class="ui-block-b" style="width:80%; float:left;"><p>홈으로 이동</p></div>
            </div>
        </div>
        <div id="my_profile" onclick="profile('<%=profile.email%>',<%=profile.isTutor%>)">
            <div class="ui-grid-a">
                <div class="ui-block-a" style="width:40%; vertical-align: middle">
                    <%if(profile.thumbnail == null){%><img src="/images/mini_normal.jpg" id = "profile_thumbnail" style="height: 100px;" alt='icon'/><%}%>
                    <%if(profile.thumbnail != null){%><img src="<%=profile.thumbnail%>" id = "profile_thumbnail" style="height: 100px;" alt='icon'/><%}%>
                </div>
                <div class="ui-block-b" style="width:60%; vertical-align: middle">
                    <p><a id="name"><%= profile.name %></a><a id="address"><%= profile.address_gu %></a><br/>
                        <% if(profile.isTutor == 1){
                                (profile.subjects).forEach(function(subject){%>
                        <a class="subjects"><%= subject %></a>
                        <%if((profile.subjects).indexOf(subject) == 1){%><br/><%}%>
                        <%})} else { if(profile.school_name != undefined){%><a id="school"><%= profile.school_name %></a>&nbsp<a id="grade"><%= profile.grade %></a> <%}}%>
                    </p>
                </div>
            </div>
        </div>
        <div id="menu_list">
            <ul data-role="listview">
                <li><a onclick="location.href='/member/recommend_tutor/1'"><img src="/images/menu_a.png">지인을 찾아보세요</a></li>
                <li><a onclick="location.href='/community/friend_list'"><img src="/images/menu_b.png">내 인맥</a></li>
                <li><a onclick="location.href='/message/alarm'"><img src="/images/menu_c.png">알림</a></li>
                <li><a onclick="location.href='/message/list'"><img src="/images/menu_c.png">메세지</a></li>
                <li><a onclick="location.href='/search'"><img src="/images/menu_c.png">검색</a></li>
                <li><a onclick="location.href='/message/notice'"><img src="/images/menu_d.png">공지사항</a></li>
                <!--<li><a href="bmw.html"><img src="/images/menu_e.png">설정</a></li>-->
            </ul>
        </div>
    </div>

    <header data-role='header' data-theme='c'>
        <a href='#sidebar' data-icon='bullets' data-iconpos='notext'></a>
        <h1><!--<img src="/images/hellotutor2.png" id = "logo_header" alt='logo'/>-->메세지</h1>
        <%if(profile.isTutor == 1){%><a href='#choose_write' data-rel="popup" data-icon='edit' data-iconpos='notext'></a><%}%>
        <%if(profile.isTutor == 0){%><a href='/board/write' data-rel="popup" data-icon='edit' data-iconpos='notext'></a><%}%>
    </header>



    <div data-role="popup" id="send_message" data-theme="a" class="ui-corner-all">
        <div style="padding:10px 20px;">
            <h3><!--<img src="/images/notice_h.png" style="max-height: 100%">-->메세지 보내기</h3>
            <!--<label for="un" class="ui-hidden-accessible">Username:</label>-->
            <!--<input type="text" name="user" id="un" value="" placeholder="username" data-theme="a">-->
            <!--<label for="pw" class="ui-hidden-accessible">Password:</label>-->
            <!--<input type="password" name="pass" id="pw" value="" placeholder="password" data-theme="a">-->
            <textarea id="message" id="content"></textarea>
            <button type="button" onclick="send_response()">메세지 보내기</button>
        </div>
    </div>

    <div data-role="popup" id="del_dialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
        <div data-role="header" data-theme="a">
            <h1>메세지 삭제</h1>
        </div>
        <div role="main" class="ui-content">
            <p>이 메세지를 삭제하시겠습니까?</p>
            <a href="#" data-rel="back">취 소</a>
            <a href="#" data-rel="button" data-transition="flow" onclick="del_message()">삭 제</a>
        </div>
    </div>




    <section data-role="content">
        <h4>메세지</h4>
        <%list.forEach(function(message){%>
        <div id="num_<%=message.num%>">
        <div class="message">
            <div id="message_header" onclick="profile('<%=message.from%>',<%=message.isTutor%>)">
                <div class="ui-grid-a" style=" max-height: 100%">
                    <div class="ui-block-a" style="width:20%;">
                        <a>
                            <%if(message.thumbnail == null){%><img src="/images/mini_normal.jpg" id = "profile_thumbnail" style="height: 50px;" alt='icon'/><%}%>
                            <%if(message.thumbnail != null){%><img src="<%=profile.thumbnail%>" id = "profile_thumbnail" style="height: 50px;" alt='icon'/><%}%>
                        </a>
                    </div>
                    <div class="ui-block-b" style="width:80%;float:left;">
                        <a id="from_name"><%=message.from_name%></a><br/>
                        <a id="senddate"><%=message.senddate%></a>
                    </div>
                </div>
            </div>
            <div id="message_content">
                <%=message.content%>
            </div>
            <div id="message_footer">
                <div class="ui-grid-a">
                    <!--<a href='#send_message' data-rel="popup"  data-position-to="window" data-transition="pop">-->
                    <div class="ui-block-a" style="width:50%; background-color: #6699FF !important; color: #FFFFFF;" onclick="open_message_frm('<%=message.from%>')">
                        답 장
                    </div>
                    <div class="ui-block-b" style="width:50%; background-color: #F0F0F0 !important; color: #666666" onclick="del_message_dialog('<%=message.num%>')">
                        삭 제
                    </div>
                </div>
        </div>
        </div>
        <%})%>
    </section>
    <!--     <footer data-role="footer" data-position="fixed">
          <h1>Copyleft My Company</h1>
        </footer> -->
</div>





</body>
</html>
